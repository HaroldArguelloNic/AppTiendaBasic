<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AccountOptionFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ellips"
        app:layout_constraintBottom_toTopOf="@+id/guidelinebottomAccountOption"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guidelinerightAccountOption"
        app:layout_constraintStart_toStartOf="@+id/guidelineleftAccountOption"
        app:layout_constraintTop_toTopOf="@+id/guidelinetopAccountOption" />

    <TextView
        android:id="@+id/tvRightShoppingDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/guidelinebottomAccountOption"
        app:layout_constraintEnd_toStartOf="@id/guidelinerightAccountOption"
        app:layout_constraintStart_toStartOf="@+id/guidelineleftAccountOption"
        app:layout_constraintTop_toBottomOf="@id/guidelinetopAccountOption" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@color/g_blue"
        android:fontFamily="sans-serif-black"
        android:text="@string/login"
        android:textColor="@color/g_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelinerightAccountOption"
        app:layout_constraintStart_toStartOf="@id/guidelineleftAccountOption"
        app:layout_constraintTop_toBottomOf="@id/guidelinetopAccountOption" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@color/g_white"
        android:fontFamily="sans-serif-black"
        android:text="@string/Register"
        android:textColor="@color/g_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelinerightAccountOption"
        app:layout_constraintStart_toStartOf="@+id/guidelineleftAccountOption"
        app:layout_constraintTop_toBottomOf="@+id/tvRightShoppingDay" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetopAccountOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebottomAccountOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineleftAccountOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinerightAccountOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>